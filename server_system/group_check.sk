    set team color of {_team} to dark red

    set {_team} to team named "AAB_administrator"
    set team prefix of {_team} to "&cAdministrator &8| &7"
    set team option collision rule of {_team} to always
    set team color of {_team} to light red

    set {_team} to team named "AAC_moderator"
    set team prefix of {_team} to "&1Moderator &8| &7"
    set team option collision rule of {_team} to always
    set team color of {_team} to blue
    
    set {_team} to team named "AAD_supporter"
    set team prefix of {_team} to "&2Supporter &8| &7"
    set team option collision rule of {_team} to always
    set team color of {_team} to green

    set {_team} to team named "AAE_content"
    set team prefix of {_team} to "&5Content &8| &7"
    set team option collision rule of {_team} to always
    set team color of {_team} to purple

    set {_team} to team named "AAF_friend"
    set team prefix of {_team} to "&eFreund &8| &7"
    set team option collision rule of {_team} to always
    set team color of {_team} to yellow

    set {_team} to team named "ZZT_baron"
    set team prefix of {_team} to "&5Baron &8| &7"
    set team option collision rule of {_team} to always
    set team color of {_team} to dark purple

    set {_team} to team named "ZZU_crafter"
    set team prefix of {_team} to "&6Crafter &8| &7"
    set team option collision rule of {_team} to always
    set team color of {_team} to gold

    set {_team} to team named "ZZV_master"
    set team prefix of {_team} to "&7Meister &8| &7"
    set team option collision rule of {_team} to always
    set team color of {_team} to gray
    
