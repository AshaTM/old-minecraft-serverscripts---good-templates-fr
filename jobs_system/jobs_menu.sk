        if name of event-item is "&fSchaufler":
            if {job::%uuid of player%} is "Schaufler":
                send "%{server_prefix}%&cDu bist bereits im Beruf &lSchaufler&c." to player
                play sound "block.note_block.bit" with volume 0.15 and pitch 0.2 to player
            else:
                set {job::%uuid of player%} to "Schaufler"
                send "%{server_prefix}%Du bist jetzt im Beruf &fSchaufler&7." to player
                play sound "block.note_block.bell" with volume 0.15 and pitch 1.0 to player

        if name of event-item is "&fJäger":
            if {job::%uuid of player%} is "Jäger":
                send "%{server_prefix}%&cDu bist bereits im Beruf &lJäger&c." to player
                play sound "block.note_block.bit" with volume 0.15 and pitch 0.2 to player
            else:
                set {job::%uuid of player%} to "Jäger"
                send "%{server_prefix}%Du bist jetzt im Beruf &fJäger&7." to player
                play sound "block.note_block.bell" with volume 0.15 and pitch 1.0 to player

        if name of event-item is "&fAngler":
            if {job::%uuid of player%} is "Angler":
                send "%{server_prefix}%&cDu bist bereits im Beruf &lAngler&c." to player
                play sound "block.note_block.bit" with volume 0.15 and pitch 0.2 to player
            else:
                set {job::%uuid of player%} to "Angler"
                send "%{server_prefix}%Du bist jetzt im Beruf &fAngler&7." to player
                play sound "block.note_block.bell" with volume 0.15 and pitch 1.0 to player


        close inventory of player
        updateScoreboardJob(player)